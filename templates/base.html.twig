<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

      <link rel="stylesheet" href="{{ asset('vendor/css/bootstrap.min.css') }}">
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
      <link rel="stylesheet" href="{{ asset('css/base.css') }}">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/easy-autocomplete/1.3.5/easy-autocomplete.themes.min.css">
    {% block stylesheets %}
        <style>
            .video-thumb {
                font-family: 'Roboto', sans-serif;
                font-size: 14px;
                width: 200px;
            }

            .video-thumb a:link {
                text-decoration: none;
            }
        </style>

    {% endblock %}

    <title>{% block title %}Welcome!{% endblock %}</title>
  </head>
  <body>
    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('home') }}">A.V.E.</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <form action="{{ path('app_video_search') }}" class="form-inline my-2 my-lg-0 ml-auto mr-auto w-50" id="navbarSearchForm" method="get">
                <div class="input-group mr-sm-2 mr-3 ml-3 w-100">
                    <input class="form-control" type="search" placeholder="Search" aria-label="Search" name="search">
                    <div class="input-group-append">
                        <button class="btn btn-outline-light" type="submit"><i class="fas fa-search"></i></button>
                    </div>
                </div>
            </form>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ app.user.username }}
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('app_user_channel', {'channel_name':app.user.channel.name}) }}">Twój kanał</a>
                        <a class="dropdown-item" href="{{ path('app_user_wallet') }}">Twój portfel</a>
                        <a class="dropdown-item" href="{{ path('user_edit') }}">Edit account</a>
                        <a class="dropdown-item" href="{{ path('user_remove') }}">Remove account</a>
                        <a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
                    </div>
                </li>
            </ul>
            {% else %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_register') }}"><i class="fas fa-user"></i> Sign Up</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}"><i class="fas fa-sign-in-alt"></i> Login</a>
                </li>
            </ul>
            {% endif %}
        </div>
    </nav>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-warning">
            {{ message }}
        </div>
    {% endfor %}

    {% block body %}{% endblock %}
    <br>
    <footer class="bg-dark text-white">MJ Sidor, PPuchacz, symf project</footer>

    {% block javascripts %}
        <script src="{{ asset('vendor/js/jquery-3.3.1.min.js') }}"></script>
        <script src="{{ asset('vendor/js/popper.min.js') }}" ></script>
        <script src="{{ asset('vendor/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/tooltips.js') }}"></script>
        <script src="{{ asset('js/bootboxes.js') }}" type="module"></script>
        <script src="{{ asset('js/autocomplete.js') }}"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.3.2/bootbox.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/easy-autocomplete/1.3.5/jquery.easy-autocomplete.min.js"></script>
    {% endblock %}

  </body>
</html>